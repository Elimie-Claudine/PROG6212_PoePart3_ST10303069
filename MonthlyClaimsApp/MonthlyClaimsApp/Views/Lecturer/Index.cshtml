@model MonthlyClaimsApp.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h3 class="text-center mb-4">Submit Your Monthly Claim</h3>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
            <div class="form-group mb-3">
                <label>Lecturer</label>
                <input class="form-control" value="@Context.Session.GetString("Username")" readonly />
            </div>


            <div class="form-group mb-3">
                <label asp-for="HoursWorked"></label>
                <input asp-for="HoursWorked" type="number" class="form-control" id="hoursInput" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="HourlyRate"></label>
                <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" id="rateInput" required />
            </div>


            <div class="form-group mb-3">
                <label>Total Amount</label>
                <input type="number" class="form-control" id="totalAmount" readonly />
            </div>

            <div class="form-group mb-3">
                <label>Upload Document (optional)</label>
                <input type="file" name="file" class="form-control" accept=".pdf,.docx,.xlsx" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-primary w-100">Submit Claim</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function calculateTotal() {
            let hours = parseFloat($("#hoursInput").val()) || 0;
            let rate = parseFloat($("#rateInput").val()) || 0;
            let total = hours * rate;

            $("#totalAmount").val(total.toFixed(2));
        }

        $("#hoursInput, #rateInput").on("input", function () {
            calculateTotal();
        });
    </script>
}
