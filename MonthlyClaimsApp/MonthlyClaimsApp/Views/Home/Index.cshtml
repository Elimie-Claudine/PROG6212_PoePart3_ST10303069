@{
    ViewData["Title"] = "Home Page";
    var role = ViewBag.UserRole as string;
}

<div class="container mt-5">
    <h1 class="text-center mb-4" style="color:#FF6F00;">Welcome to the Contract Monthly Claim System</h1>

    @if (string.IsNullOrEmpty(role))
    {
        <p class="text-center mb-5">Please <a asp-controller="Account" asp-action="Login">Login</a> to access the system.</p>
    }
    else if (role == "Lecturer")
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <div class="col">
                <a asp-controller="Lecturer" asp-action="Index" class="btn btn-warning btn-lg w-100 mb-3">Submit a Claim</a>
            </div>
            <div class="col">
                <a asp-controller="Lecturer" asp-action="TrackClaims" class="btn btn-info btn-lg w-100 mb-3">Track My Claims</a>
            </div>
        </div>
    }
    else if (role == "Program Coordinator" || role == "Academic Manager")
    {
        <div class="text-center">
            <a asp-controller="Coordinator" asp-action="Index" class="btn btn-primary btn-lg mb-3">View Pending Claims</a>
        </div>
    }
    else if (role == "HR")
    {
        <div class="text-center">
            <a asp-controller="HR" asp-action="Index" class="btn btn-success btn-lg mb-3">Manage Lecturers</a>
        </div>
    }


